<%%= form_for <%= item_path :instance_variable => true %> do |f| %>
  <%%= f.error_messages %>
<%- for attribute in model_attributes -%>
  <div class="clearfix">
    <%%= f.label :<%= attribute.name %> %>
    <div class="input">
      <%%= f.<%= attribute.field_type %> :<%= attribute.name %>, class: "xlarge", size: 30  %>
    </div>
  </div>
<%- end -%>
  <div class="actions">
    <%%= f.submit "Save changes", class: "btn primary" %>
  </div>
<%% end %>


